<div class="row">
	<div class="col-md-12"> 
		<div class="card">
			<div class="card-header card-header-icon" data-background-color="rose">
				<i class="material-icons">list</i>
			</div>
			<div class="card-content">
				<h4 class="card-title">Students</h4>
				<%= form_for_filterrific @filterrific do |f| %>

				<div class="col-sm-3">
					<div class="form-group label-floating">
						<label class="control-label">Name</label>
						<%= f.text_field(
							:search_query,
							class: 'filterrific-periodically-observed form-control'
								) %>
							</div>
						</div>

						<div class="col-sm-3">
							<%= f.select(
								:with_section_id,
								@filterrific.select_options[:with_section_id],
								{ include_blank: '- Section -' },
								class: "selectpicker filterrific-periodically-observed", "data-style" => "btn btn-primary btn-round"
									) %>

								</div>

								<div class="col-sm-3">
									<%= f.select(
										:sorted_by,
										@filterrific.select_options[:sorted_by],
										{ include_blank: '- Sort BY -' },
										class: "selectpicker filterrific-periodically-observed", "data-style" => "btn btn-primary btn-round"
											) %>
										</div>
										<div class="col-sm-1">
											<%= link_to(
												'Reset filters',
												reset_filterrific_url,
												class: "btn btn-primary"
													) %>
												</div>
												<%= render_filterrific_spinner %>
												<% end %>	
											</div>
										</div>
									</div>
								</div>
								<div class="row">

									<%= render(
										partial: 'students/list',
										locals: { students: @students }
										) %>


									</div>

