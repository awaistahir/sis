<div class="">

  <div class="clearfix"></div>

  <div class="row">
    <div class="col-md-12 col-sm-12 col-xs-12">
      <div class="x_panel">
        <div class="x_title">
          <h2>User Report <small>Activity report</small></h2>
          <ul class="nav navbar-right panel_toolbox">
            <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
            </li>
            <li class="dropdown">
              <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button" aria-expanded="false"><i class="fa fa-wrench"></i></a>
              <ul class="dropdown-menu" role="menu">
                <li><a href="#">Settings 1</a>
                </li>
                <li><a href="#">Settings 2</a>
                </li>
              </ul>
            </li>
            <li><a class="close-link"><i class="fa fa-close"></i></a>
            </li>
          </ul>
          <div class="clearfix"></div>
        </div>
        <div class="x_content">
          <div class="col-md-4 col-sm-4 col-xs-12 profile_left">
            <div class="profile_img">
              <div id="crop-avatar">
                <!-- Current avatar -->

                <% if @teacher.image.blank? %>
                <%= image_tag("user.png", alt: "Teacher", class: "img-responsive avatar-view") %>
                <% else %>          
                <%= image_tag( @teacher.image, alt: "Teacher", class: "img-responsive avatar-view") %>
                <% end %> 
              </div>
            </div>
            <h3><%= @teacher.name %></h3>

            <ul class="list-unstyled user_data">
              <li><i class="fa fa-map-marker user-profile-icon"></i> BPS: <b><%= @teacher.bps %>
              </b></li>

              <li>
                <i class="fa fa-briefcase user-profile-icon"></i> <%= @teacher.designation %>
              </li>
              
            </ul>
            <%  if @teacher.section_incharge.present? %>Incharge:
            <%= link_to  section_path(@teacher.section_incharge.id ), class: "btn btn-success" do %>
            <i class="fa fa-edit m-right-xs"></i><%= @teacher.section_incharge.section_full_name %>
            <% end %>
            <% else %>
            Incharge: <a class="btn btn-danger"><i class="fa fa-edit m-right-xs"></i>No </a>

            <% end %>
            
            <br />

            <!-- start skills -->
            <h4>Personal Information </h4>
            <table class="table table-striped jambo_table bulk_action">

              <tbody>
                <tr class="even pointer">
                  <td>Qualification</td>
                  <td><%= @teacher.qualification %></td>
                </tr>
                <tr class="even pointer">
                  <td>Date of Birth</td>
                  <td><%= @teacher.dob %></td>
                </tr>
                <tr class="even pointer">
                  <td>Appointment</td>
                  <td><%= @teacher.date_of_appointment %></td>
                </tr>
                <tr class="even pointer">
                  <td>Present Grade Date</td>
                  <td><%= @teacher.date_of_present_grade %></td>
                </tr>
                <tr class="even pointer">
                  <td>School Joined</td>
                  <td><%= @teacher.date_of_joining_school %></td>
                </tr>
                <tr class="even pointer">
                  <td></td>
                  <td></td>
                </tr>
                <tr class="even pointer">
                  <td>CNIC</td>
                  <td><%= @teacher.cnic %></td>
                </tr>
                <tr class="even pointer">
                  <td>Addr.</td>
                  <td><%= @teacher.address %></td>
                </tr>
                <tr class="even pointer">
                  <td>Contact</td>
                  <td><%= @teacher.mobile %></td>
                </tr>
              </tbody>
            </table>

            
            <!-- end of skills -->

          </div>
          <div class="col-md-8 col-sm-8 col-xs-12">

            <div class="" role="tabpanel" data-example-id="togglable-tabs">
              <ul id="myTab" class="nav nav-tabs bar_tabs" role="tablist">
                <li role="presentation" class="active"><a href="#tab_content1" id="home-tab" role="tab" data-toggle="tab" aria-expanded="true">Recent Activity</a>
                </li>
                <li role="presentation" class=""><a href="#tab_content2" role="tab" id="profile-tab" data-toggle="tab" aria-expanded="false">Projects Worked on</a>
                </li>
                <li role="presentation" class=""><a href="#tab_content3" role="tab" id="profile-tab2" data-toggle="tab" aria-expanded="false">Profile</a>
                </li>
              </ul>
              <div id="myTabContent" class="tab-content">
                <div role="tabpanel" class="tab-pane fade active in" id="tab_content1" aria-labelledby="home-tab">

                  <!-- start recent activity -->
                  <table class="table table-bordered">
                    <thead>
                      <tr>
                        <%# Period.uniq.pluck(:period_no).each do |period| %>
                        <th>Period No</th>
                        <% @teacher.periods.order(:period_no).each do |period| %>
                        <th><%= period.period_no %></th>
                        <% end %>  
                      </tr>
                    </thead>
                    <tbody>

                      <tr>  
                        <th>Course</th>        
                        <% @teacher.periods.order(:period_no).each do |period| %>
                        <td><%= period.course.name %></td>
                        <% end %>  
                      </tr>
                      <tr>          
                        <th>Section</th>
                        <% @teacher.periods.order(:period_no).each do |period| %>
                        <td><%= period.section.section_full_name %></td>
                        <% end %>  
                      </tr>
                      <tr>        
                        <th>No of Days</th>  
                        <% @teacher.periods.order(:period_no).each do |period| %>
                        <td><%= period.no_of_days %></td>
                        <% end %>  
                      </tr>
                    </tbody>
                  </table>
                  <!-- end recent activity -->

                </div>
                <div role="tabpanel" class="tab-pane fade" id="tab_content2" aria-labelledby="profile-tab">

