<div class="">
	<div class="page-title">
		<div class="title_left">
			<h3>Staff</h3>
		</div>

	</div>

	<div class="clearfix"></div>

	<div class="row">
		<div class="col-md-12">
			<div class="x_panel"> 
				<div class="x_content">
					<form id="demo-form2" data-parsley-validate class="form-horizontal form-label-left">

				<%= form_for_filterrific @filterrific do |f| %>

					<div class="form-group">
						<label class="control-label col-md-3 col-sm-3 col-xs-12" for="first-name">Name<span class="required">*</span>
						</label>
						<div class="col-md-6 col-sm-6 col-xs-12">
							<%= f.text_field(
								:search_query,
								class: 'filterrific-periodically-observed form-control col-md-7 col-xs-12'
									) %>
						</div>
					</div>

						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">Section</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								<%= f.select(
									:with_section_id,
									@filterrific.select_options[:with_section_id],
									{ include_blank: '- Any -' },
									class: "form-control filterrific-periodically-observed"
										) %>
							</div>
						</div>

						<div class="form-group">
							<label class="control-label col-md-3 col-sm-3 col-xs-12">Sorted by</label>
							<div class="col-md-6 col-sm-6 col-xs-12">
								<%= f.select(
									:sorted_by,
									@filterrific.select_options[:sorted_by],
									{ include_blank: '- Any -' },
									class: "form-control filterrific-periodically-observed"
										) %>

							</div>
						</div>

						<div class="form-group">
              <div class="col-md-9 col-sm-9 col-xs-12 col-md-offset-3">

							<%= link_to(
								'Reset filters',
								reset_filterrific_url,
								class: "btn btn-primary"
								) %>
              </div>
            </div>
            <%# add an automated spinner to your form when the list is refreshed %>
								<%= render_filterrific_spinner %>
								<% end %>
					<div class="row">
						<div class="col-md-12 col-sm-12 col-xs-12 text-center">
							
						</div>

						<div class="clearfix"></div> 
						

								<%= render(
									partial: 'teachers/list',
									locals: { teachers: @teachers }
									) %>
					</div>
				</div>
			</div>
		</div>
	</div>
</div>
